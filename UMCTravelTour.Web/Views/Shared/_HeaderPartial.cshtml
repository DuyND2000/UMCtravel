<header id="header" class="header" >
    <div class="header-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-container">
                        @if (ViewData["Title"].ToString() == "Home Page")
                        {
                            @inject UMCTravelTour.DAL.Infrastructures.IUnitOfWork unitOfWork
                            {
                                var requestedLanguage = Context.Request.Query["lang"].ToString();
                                if (requestedLanguage == String.Empty)
                                    requestedLanguage = "en";
                                ViewBag.LanguagePack = unitOfWork.StaticContentRepository.GetById(requestedLanguage);
                            }
                            <h1>@ViewBag.LanguagePack.GreatWord <span id="js-rotating">@ViewBag.LanguagePack.DynamicWord1, @ViewBag.LanguagePack.DynamicWord2, @ViewBag.LanguagePack.DynamicWord3</span></h1>
                            <p class="p-heading p-large">
                                @ViewBag.LanguagePack.Quote
                                <br>
                                <span style="font-size: 13px;" class="testimonial-text">- @ViewBag.LanguagePack.QuoteAuthor -</span>
                            </p>
                            <a class="btn-solid-lg page-scroll" href="~/Tour/Index">Đặt tour ngay</a>
                        }
                        else
                        {
                            <h1>@ViewData["Title"]</h1>
                        }
                    </div>
                </div>
                <!-- end of col -->
            </div>
            <!-- end of row -->
        </div>
        <!-- end of container -->
    </div>
    <!-- end of header-content -->
</header>