<div class="footer" style="background-color: #3880a3;">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="text-container about">
                    <h4>@ViewBag.LanguagePack.FooterDescriptionTitle</h4>
                    <p class="white">@ViewBag.LanguagePack.FooterDescription</p>
                </div>
                <!-- end of text-container -->
            </div>
            <!-- end of col -->
            <div class="col-md-2">
                <div class="text-container">
                    <h4>Đường dẫn</h4>
                    <ul class="list-unstyled li-space-lg white list-group">
                        <li>
                            <a class="white" href="@ViewBag.LanguagePack.FooterLink">@ViewBag.LanguagePack.FooterLinkText</a>
                        </li>
                        <li>
                            <a class="white" href="https://localhost:44390/Home/Terms">@ViewBag.LanguagePack.FooterTermsAndConditions</a>
                        </li>
                        <li>
                            <a class="white" href="https://localhost:44390/Home/Privacy">@ViewBag.LanguagePack.FooterPrivacyPolicy</a>
                        </li>
                    </ul>
                </div>
                <!-- end of text-container -->
            </div>
            <!-- end of col -->
            <div class="col-md-2">
                <div class="text-container">
                    <h4>Công cụ</h4>
                    <ul class="list-unstyled li-space-lg list-group">
                        @if (!string.IsNullOrWhiteSpace(ViewBag.LanguagePack.FooterTool1Text))
                        {
                            <li>
                                <a class="white" href="@ViewBag.LanguagePack.FooterTool1Link">@ViewBag.LanguagePack.FooterTool1Text</a>
                            </li>
                        }
                        @if (!string.IsNullOrWhiteSpace(ViewBag.LanguagePack.FooterTool2Text))
                        {
                            <li>
                                <a class="white" href="@ViewBag.LanguagePack.FooterTool2Link">@ViewBag.LanguagePack.FooterTool2Text</a>
                            </li>
                        }@if (!string.IsNullOrWhiteSpace(ViewBag.LanguagePack.FooterTool3Text))
                        {
                            <li>
                                <a class="white" href="@ViewBag.LanguagePack.FooterTool3Link">@ViewBag.LanguagePack.FooterTool3Text</a>
                            </li>
                        }
                    </ul>
                </div>
                <!-- end of text-container -->
            </div>
            <!-- end of col -->
            <div class="col-md-2">
                <div class="text-container">
                    <h4>Đồng hành</h4>
                    <ul class="list-unstyled li-space-lg list-group">
                        @if (!string.IsNullOrWhiteSpace(ViewBag.LanguagePack.FooterAffiliate1Text))
                        {
                            <li>
                                <a class="white" href="@ViewBag.LanguagePack.FooterAffiliate1Link">@ViewBag.LanguagePack.FooterAffiliate1Text</a>
                            </li>
                        }
                        @if (!string.IsNullOrWhiteSpace(ViewBag.LanguagePack.FooterAffiliate2Text))
                        {
                            <li>
                                <a class="white" href="@ViewBag.LanguagePack.FooterAffiliate2Link">@ViewBag.LanguagePack.FooterAffiliate2Text</a>
                            </li>
                        }@if (!string.IsNullOrWhiteSpace(ViewBag.LanguagePack.FooterAffiliate3Text))
                        {
                            <li>
                                <a class="white" href="@ViewBag.LanguagePack.FooterAffiliate3Link">@ViewBag.LanguagePack.FooterAffiliate3Text</a>
                            </li>
                        }
                    </ul>
                </div>
                <!-- end of text-container -->
            </div>
            <!-- end of col -->
        </div>
        <!-- end of row -->
        <div class="copyright" style="background-color: #3880a3;">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <p class="p-small">@ViewBag.LanguagePack.FooterCopyright</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end of container -->
</div>
