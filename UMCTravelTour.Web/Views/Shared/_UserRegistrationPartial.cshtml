@model RegistrationModel

<div class="d-flex flex-column mx-3">
    <form id="UserRegistrationForm" asp-controller="UserAuth" asp-action="Register">
        <strong>Thông tin cá nhân</strong>
        <input type="hidden" asp-for="RegistrationValid" />
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="form-group">
                    <input class="form-control" asp-for="FirstName" placeholder="Tên..." />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="form-group">
                    <input class="form-control" asp-for="LastName" placeholder="Họ đệm..." />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input class="form-control" asp-for="PhoneNumber" placeholder="Số điện thoại..." />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <strong>Thông tin tài khoản</strong>
        <div class="form-group">
            <input class="form-control" asp-for="SignUpEmail" placeholder="Địa chỉ email..." />
            <span asp-validation-for="SignUpEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input class="form-control" asp-for="SignUpPassword" placeholder="Mật khẩu..." />
            <span asp-validation-for="SignUpPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input class="form-control" asp-for="ConfirmPassword" placeholder="Nhập lại mật khẩu..." />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="form-check">
                <input asp-for="AcceptAgreement" class="form-check-input" onclick="Agree()"/>
                <label class="form-check-label" asp-for="AcceptAgreement">
                    Tôi đồng ý với <a href="~/Home/Terms" style="color: #117a8b">điều khoản</a> và <a href="~/Home/Privacy" style="color: #117a8b">chính sách bảo mật</a>
                </label>
            </div>
        </div>
        <button id="register" name="register" type="button" class="btn btn-info btn-block btn-round" disabled="disabled">Đăng ký</button>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>