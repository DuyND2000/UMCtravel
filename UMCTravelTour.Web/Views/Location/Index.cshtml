@using UMCTravelTour.ViewModel.Locations
@model IList<LocationVm>

@{
    ViewData["Title"] = "Các điểm đến";
}
<partial name="_HeaderPartial" />

<div id="details" class="my-5">
    <div class="container" style="height: auto;">
        <div class="section-title">Các điểm đến du lịch được ưa chuộng</div>
        <h2>Cùng tìm kiếm điểm đến ưa thích của bạn</h2>
        @if (Model.Count() > 0)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img style="height: 600px !important;border: none  !important;border-radius: 0 !important;box-shadow: none  !important;" class="d-block w-100" src="/@Model[0].ImageLink">
                                <div class="centered" style="font-size:100px">@Model[0].LocationName</div>
                                <div class="card-body">
                                    <div class="row justify-content-between">
                                        <div class="col-12" style="text-align:center;">
                                            <a class="btn-solid-reg" href="@Url.Action("Detail", "Location", new {locationId = Model[0].LocationId})"><i class="fas fa-search"></i> XEM</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @for (int i = 1; i < Model.Count(); i++)
                            {
                                <div class="carousel-item">
                                    <img style="height: 600px !important;border: none  !important;border-radius: 0 !important;box-shadow: none  !important;" class="d-block w-100" src="/@Model[i].ImageLink" alt="First slide">
                                    <div class="centered" style="font-size:100px">@Model[i].LocationName</div>
                                    <div class="card-body">
                                        <div class="row justify-content-between">
                                            <div class="col-12" style="text-align:center;">
                                                <a class="btn-solid-reg" href="@Url.Action("Detail", "Location", new {locationId = Model[i].LocationId})"><i class="fas fa-search"></i> XEM</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Trước</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Tiếp</span>
                        </a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h3>Xin lỗi hiện tại chúng tôi chưa có điểm đến nào !!</h3>
        }
    </div>
</div>