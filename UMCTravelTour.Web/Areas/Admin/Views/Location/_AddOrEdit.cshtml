@model UMCTravelTour.ViewModel.Locations.LocationVm
<div class="form-group">
    <label asp-for="LocationName" class="control-label"></label>
    <input asp-for="LocationName" class="form-control" oninput="ChangeUrl('LocationName','UrlSlug')" />
    <span asp-validation-for="LocationName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="UrlSlug" class="control-label"></label>
    <input asp-for="UrlSlug" class="form-control" readonly/>
    <span asp-validation-for="UrlSlug" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ImageLink" class="control-label"></label><br />
    @if (Model == null || string.IsNullOrEmpty(Model.ImageLink))
    {
        <img id="output" src="~/assets/images/noimage.png" width="100" height="100">
    }
    else
    {
        <img id="output" src="~/@Model.ImageLink" width="100" height="100">
    }<br />
    <input asp-for="ImageLink" type="file" onchange="document.getElementById('output').src = window.URL.createObjectURL(this.files[0])" />

</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
