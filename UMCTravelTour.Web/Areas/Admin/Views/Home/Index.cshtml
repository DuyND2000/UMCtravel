
<div class="container">
        <div class="tile-container">
        <h1 style="text-align:center">Chào mừng trở lại!</h1>
        <h2 id="hiMessage" style="text-align:center"></h2>
        </div>
</div>

@section Scripts{
    <script src="~/assets/game/js/bind_polyfill.js"></script>
    <script src="~/assets/game/js/classlist_polyfill.js"></script>
    <script src="~/assets/game/js/animframe_polyfill.js"></script>
    <script src="~/assets/game/js/keyboard_input_manager.js"></script>
    <script src="~/assets/game/js/html_actuator.js"></script>
    <script src="~/assets/game/js/grid.js"></script>
    <script src="~/assets/game/js/tile.js"></script>
    <script src="~/assets/game/js/local_storage_manager.js"></script>
    <script src="~/assets/game/js/game_manager.js"></script>
    <script src="~/assets/game/js/application.js"></script>
    <script>
        var time = new Date().getHours();
        if (time < 10 ) {
            $("#hiMessage").text("Buổi sáng tốt lành");
        } 
        if (9 < time && time < 14) {
            $("#hiMessage").text("Buổi trưa tốt lành");
        }
        if (13 < time && time < 18) {
            $("#hiMessage").text("Buổi chiều tốt lành");
        }
        if (17 < time && time < 25) {
            $("#hiMessage").text("Buổi tối tốt lành");
        }
    </script>
}