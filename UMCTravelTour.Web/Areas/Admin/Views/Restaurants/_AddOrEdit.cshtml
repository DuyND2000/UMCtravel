@model UMCTravelTour.ViewModel.Restaurants.RestaurantVm
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="RestaurantName" class="control-label"></label>
            <input asp-for="RestaurantName" class="form-control" oninput="ChangeUrl('RestaurantName','UrlSlug')" />
            <span asp-validation-for="RestaurantName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LocationId" class="control-label"></label>
            <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
        </div>
        <div class="form-group">
            <label asp-for="ImageLink" class="control-label"></label><br />
            @if (Model == null || string.IsNullOrEmpty(Model.ImageLink))
            {
                <img id="output" src="~/assets/images/noimage.png" width="100" height="100">
            }
            else
            {
                <img id="output" src="~/@Model.ImageLink" width="100" height="100">
                <input asp-for="ImageLink" hidden />
            }<br />
            <input name="restaurantImage" id="outputImage" type="file"
                   onchange="document.getElementById('output').src = window.URL.createObjectURL(this.files[0])">

            <span asp-validation-for="ImageLink" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UrlSlug" class="control-label">Đường dẫn</label>
            <input asp-for="UrlSlug" class="form-control" readonly />
            <span asp-validation-for="UrlSlug" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
</div>